<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n    [%-4level] %logger%n%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Log SQL generated by Hibernate -->
    <logger name="org.hibernate.SQL" level="DEBUG"/>

    <!-- Log AutoConfiguration report -->
<!--
    <logger name="org.springframework.boot.autoconfigure.logging.ConditionEvaluationReportLoggingListener"
            level="DEBUG"/>
-->

    <!-- Disable redundant logging messages -->
    <logger name="org.springframework.boot.autoconfigure.web.servlet.WelcomePageHandlerMapping" level="WARN"/>
    <logger name="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor" level="WARN"/>
    <logger name="org.springframework.boot.web.embedded.tomcat.TomcatWebServer" level="WARN"/>
    <logger name="org.apache.coyote.http11.Http11NioProtocol" level="WARN"/>
    <logger name="org.apache.catalina.core" level="WARN"/>

</configuration>
